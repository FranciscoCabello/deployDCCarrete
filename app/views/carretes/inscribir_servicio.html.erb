<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <h1>Servicios</h1>
    <table class="table table-striped">
      <thead>
      <tr>
        <th>Imagen</th>
        <th>Nombre</th>
        <th>Descripcion</th>
        <th>Capacidad</th>
        <th>Costo</th>
        <th>Valoracion</th>
        <th>Categoria</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
      <% if current_user %>
        <% @servicios.each do |servicio| %>
          <tr>
            <td><%= image_tag(servicio.avatar, :class => 'img-circle', :border => 3, :height => 45, :width => 45 ) %></td>
            <td><%= servicio.nombre %></td>
            <td><%= servicio.descripcion %></td>
            <td><%= servicio.capacidad %></td>
            <td><%= servicio.costo %></td>
            <td><%= servicio.valoracion %></td>
            <td><%= servicio.categoria %></td>
            <td><%= servicio.user.nombre %></td>
            <td><%= button_to 'Inscribir servicio', carretes_agregar_servicio_def_path(:carrete_id => @carrete.id, :user_id => current_user, :servicio => servicio), method: :post, :class => "btn btn-info", method: :POST %></td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
